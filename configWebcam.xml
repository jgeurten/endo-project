<PlusConfiguration version="2.0">

  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet 
      Name="PlusServer: Media Foundation video capture device - color"
      Description="Broadcasting acquired video through OpenIGTLink" />
    
	<Device
      Id="TrackerDevice"
      Type="PolarisTracker"
      SerialPort="7"
      BaudRate="115200"
	  AcquisitionRate="60"
      ToolReferenceFrame="Tracker" >
      <DataSources>
	  
		<DataSource Type="Tool" Id="Camera" RomFile="ToolDefinitions/Camera.rom"  />
		<DataSource Type="Tool" Id="RedLaser" RomFile="ToolDefinitions/laser_red.rom"    />
		<DataSource Type="Tool" Id="GreenLaser" RomFile="ToolDefinitions/laser_green.rom"    />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" > 
		  <DataSource Id="Camera"/>
		  <DataSource Id="RedLaser"/>
		  <DataSource Id="GreenLaser"/>

        </OutputChannel>
      </OutputChannels>
    </Device>
	
	<Device
      Id="VideoDevice" 
      Type="MmfVideo" 
      FrameSize="640 480"
      VideoFormat="RGB24"
      CaptureDeviceId="0" >
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="MF" ImageType="RGB_COLOR"  />
      </DataSources>      
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>
    <Device
      Id="CaptureDevice"
      Type="VirtualCapture"
      BaseFilename="RecordingTest.mha"
      EnableCapturingOnStart="FALSE" >
      <InputChannels>
        <InputChannel Id="VideoStream" />
      </InputChannels>
    </Device>
	
	<Device 
      Id="TrackedVideoDevice" 
      Type="VirtualMixer" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
        <InputChannel Id="VideoStream" />
      </InputChannels>
      <OutputChannels>
        <OutputChannel Id="TrackedVideoStream"/>
      </OutputChannels>
    </Device>
	
  </DataCollection>

